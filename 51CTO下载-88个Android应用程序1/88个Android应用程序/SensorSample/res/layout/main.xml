<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="方向传感器" />
   <EditText
       android:id="@+id/orientationEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         />
   <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="磁场传感器" />
   <EditText
       android:id="@+id/magneticEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         />
   <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="温度传感器" />
   <EditText
       android:id="@+id/temeratureEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         />
   <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="光传感器" />
   <EditText
       android:id="@+id/lightEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         />
   <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="压力传感器" />
   <EditText
       android:id="@+id/pressureEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
         />
</LinearLayout>